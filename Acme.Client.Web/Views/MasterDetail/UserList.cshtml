@model IEnumerable<Acme.Common.DataContract.UserViewModel>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a class="detailItem" data-assigned-id="@item.UserId"> Details </a>
        </td>
    </tr>
}

</table>

<div class="row">
    <div id="divDetail">
    </div>
</div>


<script>
    $(function () {
        $('.detailItem').click(getDetails);
    });

    function getDetails() {
        acme.ajax.sayHello("Pravin-Home");
        debugger;
        acme.ajax.getHtml("masterdetail/GetUser?userId="+$(this).data().assignedId, null, onDetailSuccess, onDetailError);
        console.log($(this).data().assignedId);
    }

    function onDetailSuccess(response) {
        $('#divDetail').empty();
        $('#divDetail').html(response);
    }

    function onDetailError() {

    }

</script>
